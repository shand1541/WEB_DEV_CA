<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Game Registration</display-name>
    <description>
        A web application for user registration and game access
    </description>
    <!-- need to change servelts to match gaming and registeration -->

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Age Check Servlet Definition -->
    <servlet>
        <servlet-name>AgeCheckServlet</servlet-name>
        <servlet-class>AgeCheckServlet</servlet-class>
        <description>Servlet to verify user age before allowing game access</description>
    </servlet>

    <!-- Age Check Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>AgeCheckServlet</servlet-name>
        <url-pattern>/ageCheck</url-pattern>
    </servlet-mapping>

    <!-- Guess Number Servlet Definition -->
    <servlet>
        <servlet-name>GuessNumber</servlet-name>
        <servlet-class>GuessNumber</servlet-class>
        <description>Servlet to handle number guessing game logic</description>
    </servlet>

    <!-- Guess Number Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>GuessNumber</servlet-name>
        <url-pattern>/guessNumber</url-pattern>
    </servlet-mapping>

    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>