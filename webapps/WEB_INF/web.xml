<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Game Registration</display-name>
    <description>
        A web application for user registration and game access
    </description>


    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- registration -->
    <servlet>
        <servlet-name>RegisterPage</servlet-name> <!--a reference for mapping -->
        <servlet-class>RegisterPage</servlet-class><!--b match java class name -->
        <description>Servlet to handle user registration</description>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name><!--A -->
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- login  -->
    <servlet>
        <servlet-name>LoginPage</servlet-name> <!--a reference for mapping -->
        <servlet-class>LoginPage</servlet-class><!--b match java class name -->
        <description>Servlet to handle user login</description>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name><!--A -->
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- credit -->
    <servlet>
        <servlet-name>CreditPage</servlet-name> <!--a reference for mapping -->
        <servlet-class>CreditPage</servlet-class>
        <description>Servlet to handle user credit </description>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreditPage</servlet-name> <!--A -->
        <url-pattern>/credit</url-pattern>
    </servlet-mapping>

    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>